{
    "title": {
            "media": {
                "credit": "NAMD"
            },
            "text":{
                "headline": "Timeline de Publicações",
                "text": "Linha do tempo com artigos sobre {{busca}}"
            }

    },
    "events":  [
        {% for art in articles %}
            {% if not loop.last %}
            {
                "start_date": {
                    "year": "{{art.PubDatetime.Year}}",
                    "month": "{{art.PubDatetime.Month}}",
                    "day": "{{art.PubDatetime.Day}}"
                },
                "end_date": {
                    "year": "{{art.PubDatetime.Year}}",
                    "month": "{{art.PubDatetime.Month}}",
                    "day": "{{art.PubDatetime.Day}}"
                },
                {%if art.link is none %}
                    "text": {
                        "headline": "{{art.MedlineCitation.Article.ArticleTitle|e}}",
                        "text": "{{art.MedlineCitation.Article.Abstract.AbstractText|forceescape|truncate}}"
                    },
                {%else%}
                    "text": {
                        "headline": "<a href={{art.link}} target='_blank'>{{art.MedlineCitation.Article.ArticleTitle|e}}</a>",
                        "text": "{{art.MedlineCitation.Article.Abstract.AbstractText|forceescape|truncate}}"
                    },
                {% endif %}

                "autolink": true,
                "unique_id": "{{art.MedlineCitation.PMID}}"
            },

            {%else%}
            {
                "start_date": {
                    "year": "{{art.PubDatetime.Year}}",
                    "month": "{{art.PubDatetime.Month}}",
                    "day": "{{art.PubDatetime.Day}}"
                },
                "end_date": {
                    "year": "{{art.PubDatetime.Year}}",
                    "month": "{{art.PubDatetime.Month}}",
                    "day": "{{art.PubDatetime.Day}}"
                },
                {%if art.link is none %}
                    "text": {
                        "headline": "{{art.MedlineCitation.Article.ArticleTitle}}",
                        "text": "{{art.MedlineCitation.Article.Abstract.AbstractText|forceescape|truncate}}"
                    },
                {%else%}
                    "text": {
                        "headline": "<a href={{art.link}} target='_blank'>{{art.MedlineCitation.Article.ArticleTitle}}</a>",
                        "text": "{{art.MedlineCitation.Article.Abstract.AbstractText|forceescape|truncate}}"
                    },
                {% endif %}
                "unique_id": "{{art.MedlineCitation.PMID}}"
            }
            {% endif %}
        {% endfor %}
    ]
}


